generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  nickname  String   @unique
  password  String?
  issues    IssueBoard[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model IssueBoard {
  id        Int      @id @default(autoincrement())
  title     String
  contents  String
  countOfViews Int   @map("count_of_views") @default(0)
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("issue_board")
}